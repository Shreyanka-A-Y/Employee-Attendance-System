# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.html text eol=lf
*.md text eol=lf

# Denote all files that are truly binary and should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary

# Mark package.json and package-lock.json as generated files
package-lock.json linguist-generated=true

# Mark build outputs as generated
frontend/build/* linguist-generated=true
backend/node_modules/* linguist-vendored=true
frontend/node_modules/* linguist-vendored=true

