# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Server Port (usually set automatically by hosting platform in production)
PORT=5000

# MongoDB Connection String
# For local MongoDB: mongodb://localhost:27017/employee-attendance
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database-name
MONGODB_URI=mongodb://localhost:27017/employee-attendance

# JWT Secret Key (REQUIRED for production)
# Generate a strong random string for production
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Node Environment
# Set to 'production' when deploying
NODE_ENV=development

# Frontend URL (for CORS configuration)
# Optional: Used to allow specific frontend origin
# For local development: http://localhost:3000
# For production: https://your-frontend-url.onrender.com
FRONTEND_URL=http://localhost:3000
